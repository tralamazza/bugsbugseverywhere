extends layout

block content
  script(src='/app.js')

  h4 Sign in
  form(name='zeeForm', method='POST', onsubmit='return validateZeeForm()')
    p What is your e-email address?
    label(for='email') My e-mail address is:
      input(type='text', name='email')
    p Do you have a RainForest password?
    .lbl No, I am a new customer.
      input(type='radio', value='new', id='rad_user_new', name='rad_user', checked='checked', onchange='disablePassword()')
    .lbl Yes, I have a password:
      input(type='radio', value='exists', id='rad_user_exists', name='rad_user', onchange='enablePassword()')
      input(type='text', id='password', name='password', disabled='disabled')
    button(type='submit') Sign up using a totally unsecure server

